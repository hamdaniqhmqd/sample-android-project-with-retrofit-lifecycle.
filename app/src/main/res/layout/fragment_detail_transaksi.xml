<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTransaksiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBarangNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvKategoriBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Barang" />

        <TextView
            android:id="@+id/tvHargaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Barang" />

        <TextView
            android:id="@+id/tvJumlahBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Barang" />

        <TextView
            android:id="@+id/tvTotalHargaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Harga" />

        <Button
            android:id="@+id/delete"
            android:text="delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/update"
            android:text="update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>